<div class="page-header">
  <h1>Grupos</h1>
</div>
<div class="row">
  <div class="col-md-12 col-sm-12">
    <table class = 'table table-striped'>
      <tr>
        <th> Nome </th>
        <th> Descrição </th>
      </tr>
      <% @toolsgroup.each do |group|%>
      <tr>
        <td><%= link_to group.name, group %></td>
        <td><%= link_to group.description, group %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <%= link_to 'Novo', new_tools_group_path,class: "btn btn-success pull-right" %>
    </div>
  </div>
</div>
