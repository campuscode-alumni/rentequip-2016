<div class="row">
  <% if flash[:warning] %>
  <div class="col-md-12 col-sm-12">
    <div class="alert alert-danger alert-dismissible pull-right" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">x</span>
      </button>
      <%=flash[:warning] %>
    </div>
  </div>
  <% end %>
</div>
<%= simple_form_for @toolsgroup do |f|%>
  <%= f.input :name, label: 'Nome',  error: 'O campo não pode estar vazio', placeholder: 'Insira o nome do grupo aqui.' %>
  <%= f.input :description, label: 'Descrição', placeholder: 'Insira a descrição referente do grupo de equipamentos.' %>
  <%= f.button :submit, submit_btn, class: "btn-primary" %>
<% end %>
