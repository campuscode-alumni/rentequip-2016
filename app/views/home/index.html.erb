<div class="row">
  <div class="col-md-12 col-sm-12">
    <div class="container">
      <h3>Lista de Contratos</h3>
      <table id="contratos" class='table table-striped'>
        <thead>
          <tr>
            <th>Número de Contrato</th>
            <th>Dono do contrato</th>
            <th>Ferramentas</th>
            <th>Quantidade de Ferramentas alocadas</th>
            <th>Expiração do Contrato</th>
            <th>Valor do Contrato</th>
          </tr>
        </thead>
        <tbody>
          <% @contracts.each do |contract| %>
          <tr>
            <td></td>
            <td><%= contract.client.company_name %></td>
            <td><%= contract.print_tools %></td>
            <td><%= contract.tools.count %></td>
            <td><%= contract.format_date(contract.deadline) %></td>
            <td><%= contract.total_price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


