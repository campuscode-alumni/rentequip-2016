<%= simple_form_for @client do |f| %>
  <%= f.input :company_name, label: 'Razão Social' %>
  <%= f.input :fantasy_name, label: 'Nome Fantasia' %>
  <%= f.input :cnpj, label: 'CNPJ' %>
  <%= f.input :contact_name, label: 'Nome do contato' %>
  <%= f.input :phone, label: 'Telefone' %>
  <%= f.input :email, label: 'E-mail' %>
  <%= f.input :address, label: 'Logradouro' %>
  <%= f.input :address_number, label: 'Número', as: :string %>
  <%= f.input :aditional_address_detail, label: 'Complemento' %>
  <%= f.input :zipcode, label: 'CEP'%>
  <%= f.input :neighborhood, label: 'Bairro'%>
  <%= f.input :city, label: 'Cidade'%>
  <%= f.input :state, label: 'Estado', collection: ApplicationHelper::BRAZILIAN_STATES, prompt: "Escolha um Estado" %>
  <%= f.button :submit, submit_text, class:"btn btn-primary"  %>
<% end  %>
